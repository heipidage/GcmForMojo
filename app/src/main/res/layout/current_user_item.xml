<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/qq_ico"
            android:layout_margin="5dp"
            android:id="@+id/current_user_item_type" />

        <TextView android:id="@+id/current_user_item_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/current_user_item_type"
                  android:layout_marginTop="10dp"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textColor="@android:color/black"
                  android:text="黑皮大哥"
                  android:maxLines="1"
                  android:maxEms="6"
                  android:ellipsize="end"
                  android:textSize="18sp"
                  android:layout_marginLeft="3dp"
                  android:focusable="false" />
        <TextView android:id="@+id/current_user_item_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBottom="@id/current_user_item_name"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textColor="#FF777676"
                  android:text="2017/2/1 12:00:00"
                  android:layout_marginBottom="3dp"
                  android:layout_marginRight="10dp"
                  android:textSize="12sp"
                  android:focusable="false"
                  android:layout_alignParentRight="true" />
        <TextView android:id="@+id/current_user_item_message"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/current_user_item_type"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textColor="#FF777676"
                  android:text="测试消息"
                  android:maxLines="1"
                  android:maxEms="12"
                  android:ellipsize="end"
                  android:layout_marginLeft="3dp"
                  android:layout_below="@id/current_user_item_name"
                  android:layout_marginBottom="10dp"
                  android:focusable="false"/>
        <TextView android:id="@+id/current_user_item_msgcount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1"
                  android:textColor="@android:color/white"
                  android:background="@drawable/num_bg"
                  android:layout_alignRight="@id/current_user_item_time"
                  android:layout_alignBottom="@id/current_user_item_message"/>
        </RelativeLayout>

    <TextView
        android:id="@+id/list_view_delete"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18sp"
        android:background="#e53935"
        android:textColor="#eeeeee"
        android:text="删除"/>

</LinearLayout>